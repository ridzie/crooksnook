// const res = await fetch("http://localhost:3001/posts"); 
const res = await fetch("http://api:3001/posts");// calls your API
const posts = await res.json();                         // gets back JSON rows

---

<!doctype html>
<html lang="en">
	<head>
        <BaseHead title={SITE_TITLE} description={SITE_DESCRIPTION} />
    </head>
    <body>
        <Header />
        <main >
            <h1 >Musings</h1>
            <div class="one">
                <section class="grid-3col">
                    {posts.map((post) => (
                       <Card
                       /*
                            href={`/blog/${post.id}/`}
                            title={post.data.title}
                            description={post.data.description}
                            date={post.data.pubDate}
                            heroImage={post.data.heroImage}
                        */
                            href={`/blog/${post.slug}/`}
                            title={post.title}
                            description={post.description}
                            date={post.pub_date}
                            heroImage={post.hero_image}
                            bgColor="pink"
                            textColor="#ff006e"
                        />
                    ))}
                </section>
            </div>
        </main>
        <Footer />
    </body>
</html>
