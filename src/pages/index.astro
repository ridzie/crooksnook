---
import BaseHead from '../components/BaseHead.astro';
import Footer from '../components/Footer.astro';
import Header from '../components/Header.astro';
import { SITE_DESCRIPTION, SITE_TITLE } from '../consts';
---

<!doctype html>
<html lang="en">
	<head>
		<BaseHead title={SITE_TITLE} description={SITE_DESCRIPTION} />
	</head>
	<body>
		<Header /><!--
		<style>
			div.one {
				border-style: solid;
				border-width: 5px;
				border-radius: 30px;
				padding: 25px 50px 25px;
			}
			h1 {
				text-align: center;
			}
		</style> -->
		<main>
			<h1>Welcome to the Crook's Nook</h1>
			<div class="one" style="background-color: skyblue;">
				<p>
					This is a personal website and blog for Ridzie, a software engineer who enjoys art,
					science, and satire. She is not aware of what she is doing, but she hopes she eventually will.
				</p>
				<div class="line" style="--line-weight: 5px; --line-length: 100%; --line-color: black; --line-direction: horizontal;"></div>
				<p>
					Find her latest posts on the <a href="/blog">blog</a> page.
				</p>
			</div>
		</main>
		<Footer />
	</body>
</html>
