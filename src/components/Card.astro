---
import { Image } from "astro:assets";
import FormattedDate from "./FormattedDate.astro";

const { 
  href, 
  title, 
  description, 
  date, 
  heroImage, 
  bgColor = "white", 
  textColor = "black" 
} = Astro.props;
---

<div class="one" style={`background-color:${bgColor}; color:${textColor};`}>
  <a href={href} style="color:inherit; text-decoration:none;">
    {heroImage && (
      <Image
        width={720}
        height={360}
        src={heroImage}
        alt={title}
        style="max-width:100%; height:auto; display:block; margin:0 auto;"
      />
    )}
    <h4 style={`color:${textColor};`}>{title}</h4>
    <div class="line" style="--line-weight: 5px; --line-length: 100%; --line-color: black; --line-direction: horizontal; margin: 1rem 0;" />
    <p style="color: black">{description}</p>
    <p style="text-align: right;">
      <FormattedDate date={date} />
    </p>
  </a>
</div>